<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.brainesgames.snake.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#333333">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Snake"
        android:id="@+id/optionsTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#00aa00"
        android:shadowColor="#005500"
        android:singleLine="false"
        android:phoneNumber="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/button"
        android:textSize="@dimen/button_size"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="#00dd00"
        android:background="#666666"
        android:onClick="startGame"
        android:padding="20dp"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPTIONS"
        android:id="@+id/button2"
        android:layout_marginBottom="14dp"
        android:textSize="30sp"
        android:textColor="#00cc00"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#999999"
        android:onClick="optionsMenu" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Programmed By: \nOrson &quot;Orsahnn&quot; Baines and Mark &quot;Sparkles&quot; Frezell"
        android:id="@+id/creditsLabel"
        android:layout_below="@+id/optionsTitle"
        android:textSize="@dimen/text_size"
        android:textColor="#008800"
        android:shadowColor="#004400"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Controls:\n-Swipe to Turn\n-Tap to Pause"
        android:id="@+id/instructionsLabel"
        android:layout_below="@+id/creditsLabel"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/text_size"
        android:textColor="#00bf00"
        android:shadowColor="#004400"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Instructions:\n-Eat the apples to increase your score\n-Avoid the walls and your tail"
        android:id="@+id/textView"
        android:layout_below="@+id/instructionsLabel"
        android:textSize="@dimen/text_size"
        android:textColor="#00e100"
        android:shadowColor="#004400"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
</RelativeLayout>
