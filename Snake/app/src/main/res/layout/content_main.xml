<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.brainesgames.snake.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#333333">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textColor="#00ff00"
        android:singleLine="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/title_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/startButton"
        android:textSize="@dimen/button_size"
        android:typeface="monospace"
        android:textStyle="bold"
        android:textColor="#00dd00"
        android:background="#666666"
        android:onClick="toOptions"
        android:padding="10dp"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/howButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOW TO PLAY"
        android:id="@+id/howButton"
        android:textSize="@dimen/button_size"
        android:textColor="#00cc00"
        android:background="#999999"
        android:onClick="toHowto"
        android:padding="10dp"
        android:layout_marginBottom="21dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/leaderButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboard"
        android:textSize="@dimen/button_size"
        android:textColor="#00cc00"
        android:background="#999999"
        android:id="@+id/leaderButton"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp"
        android:onClick="toLeaderboard"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This text should be replaced by the message."
        android:id="@+id/TextView01"
        android:layout_marginTop="90dp"
        android:textColor="#00dd00"
        android:rotation="15"
        android:textSize="@dimen/button_size"
        android:gravity="center_horizontal"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
