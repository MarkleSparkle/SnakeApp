<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.brainesgames.snake.OptionsActivity"
    android:background="#333333">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Options"
        android:id="@+id/optionsTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="#00aa00" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/optionsTitle"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed"
            android:id="@+id/speedLabel"
            android:layout_below="@+id/optionsTitle"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:typeface="serif"
            android:textColor="#00aa00"
            android:paddingLeft="10dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/speedGroup"
            android:paddingLeft="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slow"
                android:id="@+id/slowButton"
                android:textColor="#00aa00" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:id="@+id/normalButton"
                android:textColor="#00aa00" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fast"
                android:id="@+id/fastButton"
                android:textColor="#00aa00" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extreme"
                android:id="@+id/extremeButton"
                android:textColor="#00aa00" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dynamic (Speed increases with every five apples)"
                android:id="@+id/dynamicButton"
                android:textColor="#00aa00" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random (Speed changes randomly with every apple)"
                android:id="@+id/randomButton"
                android:textColor="#00aa00" />

        </RadioGroup>

    </LinearLayout>

</RelativeLayout>
